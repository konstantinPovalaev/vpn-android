<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#344B40"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VPN КЛИЕНТ"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/key_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Введите ключ"
        android:textColorHint="#8A9E94"
        android:textColor="#FFFFFF"
        android:background="@drawable/edit_text_bg"
        android:padding="16dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ПОДКЛЮЧИТЬСЯ"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:visibility="gone"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VPN отключён"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/main_button"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:text="START"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F44336"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <Button
        android:id="@+id/settings_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="⚙️"
        android:textSize="30sp"
        android:backgroundTint="#4A6B5C"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

</LinearLayout>